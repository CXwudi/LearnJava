<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Properties>
    <Property name="loggerName">logger</Property>
    <Property name="visierLogBackFormat">%date{HH:mm:ss.SSS} [%thread] %highlight{%-5level} %style{%${loggerName}{1.}}{cyan} - %msg%n%throwable</Property>
    <property name="myCurrentBestFormatter">${visierLogBackFormat}</property>
  </Properties>

  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <!-- <LevelRangeFilter minLevel="TRACE" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/> -->
      <PatternLayout pattern="${myCurrentBestFormatter}"/>
    </Console>
  </Appenders>

  <Loggers>
    <!-- global logger setup-->
    <Root level="trace">
      <AppenderRef ref="stdout" /> 
    </Root>
  </Loggers>
  
</Configuration>